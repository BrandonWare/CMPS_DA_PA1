<script>

// NOTE: You must implement the data structures using the no prototype approach.
//       This is what the book uses, so you can copy it.
//       See also: https://it.pointpark.edu/tutorials/no-prototype-vs-prototype/

// NOTE: Please review the following links regularly:
//       https://it.pointpark.edu/tutorials/arrays-vs-objects/
//       https://it.pointpark.edu/tutorials/no-prototype-vs-prototype/
//       https://it.pointpark.edu/tutorials/implementation-vs-interface/


//------------------------//
// the sorting algorithms //
//------------------------//
console.log("The sorting algorithms");

// arraylist constructor
function ArrayList() {
  var array = [];

  // insert
  this.insert = function(item) {
    array.push(item);
  };

  // to string
  this.toString = function() {
    return array.join(", ");
  };

  // bubble sort
  this.bubbleSort = function() {
    var length = array.length;
    for (var i = 0; i < length; i++) {
      for (var j = 0; j < length - 1 - i; j++) {
        if (array[j] > array[j + 1]) {
          var temp = array[j];
          array[j] = array[j + 1];
          array[j + 1] = temp;
        }
      }
    }
  };

  // selection sort
  this.selectionSort = function() {
    var length = array.length;
    for (var i = 0; i < length - 1; i++) {
      var indexMin = i;
      for (var j = i; j < length; j++) {
        if (array[indexMin] > array[j]) {
          indexMin = j;
        }
      }
      if (i !== indexMin) {
        var temp = array[i];
        array[i] = array[indexMin];
        array[indexMin] = temp;
      }
    }
  };

  // sequential search
  this.sequentialSearch = function(item) {
    for (var i = 0; i < array.length; i++) {
      if (array[i] === item) {
        return i;
      }
    }
    return -1;
  };
}

// create non sorted array
function createNonSortedArray(size) {
  var arrayList = new ArrayList();
  for (var i = size; i > 0; i--) {
    arrayList.insert(i);
  }
  return arrayList;
}

// test bubble sort
var list1 = createNonSortedArray(5);
console.log("Before Bubble Sort: " + list1.toString());
list1.bubbleSort();
console.log("After Bubble Sort:  " + list1.toString());

// test selection sort
var list2 = createNonSortedArray(5);
console.log("Before Selection Sort: " + list2.toString());
list2.selectionSort();
console.log("After Selection Sort:  " + list2.toString());

// test sequential search
var list3 = createNonSortedArray(5);
console.log("Sequential Search for 3: index = " + list3.sequentialSearch(3));
console.log("Sequential Search for 9: index = " + list3.sequentialSearch(9));


//----------------------//
// searching algorithms //
//----------------------//
console.log("Searching algorithms done.");

</script>

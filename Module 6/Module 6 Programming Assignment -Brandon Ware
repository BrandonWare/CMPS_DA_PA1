<script>

// NOTE: You must implement the data structures using the no prototype approach.
//       This is what the book uses, so you can copy it.
//       See also: https://it.pointpark.edu/tutorials/no-prototype-vs-prototype/
//       and https://it.pointpark.edu/tutorials/implementation-vs-interface/

//------------------------//
// The sorting algorithms //
//------------------------//
console.log("The sorting algorithms");

// ArrayList constructor
function ArrayList() {
  let array = [];

  this.insert = function(item) {
    array.push(item);
  };

  this.toString = function() {
    return array.join(", ");
  };

  // Bubble Sort
  this.bubbleSort = function() {
    let length = array.length;
    for (let i = 0; i < length; i++) {
      for (let j = 0; j < length - 1 - i; j++) {
        if (array[j] > array[j + 1]) {
          let temp = array[j];
          array[j] = array[j + 1];
          array[j + 1] = temp;
        }
      }
    }
  };

  // Selection Sort
  this.selectionSort = function() {
    let length = array.length;
    for (let i = 0; i < length - 1; i++) {
      let indexMin = i;
      for (let j = i; j < length; j++) {
        if (array[indexMin] > array[j]) {
          indexMin = j;
        }
      }
      if (i !== indexMin) {
        let temp = array[i];
        array[i] = array[indexMin];
        array[indexMin] = temp;
      }
    }
  };

  // Sequential Search
  this.sequentialSearch = function(item) {
    for (let i = 0; i < array.length; i++) {
      if (array[i] === item) {
        return i; // found
      }
    }
    return -1; // not found
  };
}

// Helper to create a non-sorted array
function createNonSortedArray(size) {
  let arrayList = new ArrayList();
  for (let i = size; i > 0; i--) {
    arrayList.insert(i);
  }
  return arrayList;
}

// Test Bubble Sort
let list1 = createNonSortedArray(5);
console.log("Before Bubble Sort: " + list1.toString());
list1.bubbleSort();
console.log("After Bubble Sort:  " + list1.toString());

// Test Selection Sort
let list2 = createNonSortedArray(5);
console.log("Before Selection Sort: " + list2.toString());
list2.selectionSort();
console.log("After Selection Sort:  " + list2.toString());

// Test Sequential Search
let list3 = createNonSortedArray(5);
console.log("Sequential Search for 3: index = " + list3.sequentialSearch(3));
console.log("Sequential Search for 9: index = " + list3.sequentialSearch(9));


//----------------------//
// Searching algorithms //
//----------------------//
console.log("Searching algorithms done.");

</script>
